<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:buttonStyle">@style/Widget.Button.Custom</item>
        <item name="android:textViewStyle">@style/TextStyle.Serif</item>
        <item name="actionBarTabStyle">@style/Widget.Design.TabLayout</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>

    </style>
    <style name="Widget.Button.Custom" parent="android:Widget.Button">
        <item name="android:textColor">#0000FF</item>
    </style>
    <style name="TextStyle.Serif" parent="android:Widget.TextView">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabPaddingStart">1dp</item>
        <item name="tabPaddingEnd">1dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:drawablePadding">50dp</item>

        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>

        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
